{% set posts_from_category = items %}


<section class="blog-categories">
  <div class="blog-categories__container">
    <div class="blog-categories__row">
      {% for post in posts_from_category %}
        <div class="blog-categories__col">
          <div class="blog-categories__image">
            <a href="{{ post.link }}">
              <picture>
                <img src="{{ post.thumbnail.src|resize(438, 279) }}" alt="{{ post.title }}"/>
              </picture>
            </a>
          </div>
          <div class="blog-categories__content">
            <a href="{{ post.link }}">
              <h6 class="display-6 blog-categories__title">
                {{ post.title }}
              </h6>
            </a>
            <p class="blog-categories__text">
              {{ post.preview.length(60).force.read_more('') }}
            </p>
            <p>
              {{ post.date('d/m/Y') }} - {{ post.author.name }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
