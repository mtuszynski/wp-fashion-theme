<header class="header">
  <div class="container-fluid">
    <div class="header__row">

      <div class="header__logo">
        {% include 'logo/logo.twig' %}
      </div>

      <nav class="header__nav">
        {% include 'nav-main/nav-main.twig' with {'class': 'nav-main--main', 'menu': nav_main} %}
        {% include 'nav-language/nav-language.twig' with {'class': 'nav-main--lang', 'menu': nav_language} %}
      </nav>

      <button class="header__hamburger uk-icon js-header__hamburger" type="button" uk-toggle="target: #offcanvas-flip" uk-icon="icon: menu; ratio: 1.3">
        <svg width="26" height="26" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><rect x="2" y="4" width="16" height="1"></rect><rect x="2" y="9" width="16" height="1"></rect><rect x="2" y="14" width="16" height="1"></rect></svg>
      </button>

    </div>
  </div>

  <div class="offcanvas-menu" id="offcanvas-flip" uk-offcanvas="flip: true; overlay: true">
    <div class="offcanvas-menu__bar uk-offcanvas-bar">

      <button class="uk-offcanvas-close" type="button" uk-icon="icon: close; ratio: 1.3">
        <svg width="26" height="26" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill="none" stroke="#000" stroke-width="1.06" d="M16,16 L4,4"></path><path fill="none" stroke="#000" stroke-width="1.06" d="M16,4 L4,16"></path></svg>
      </button>

      {% include 'nav-main/nav-main.twig' with {'class': 'nav-main--main', 'menu': nav_main} %}
      {% include 'nav-language/nav-language.twig' with {'class': 'nav-main--lang', 'menu': nav_language} %}
    </div>
  </div>
</header>
